<script>
  document.querySelectorAll('.quantity-controls').forEach((control) => {
    const input = control.querySelector('.quantity-input');
    const minusBtn = control.querySelector('.minus');
    const plusBtn = control.querySelector('.plus');

    minusBtn.addEventListener('click', () => {
      const currentValue = parseInt(input.value);
      if (currentValue > 1) {
        input.value = currentValue - 1;
      }
    });

    plusBtn.addEventListener('click', () => {
      const currentValue = parseInt(input.value);
      if (currentValue < 99) {
        input.value = currentValue + 1;
      }
    });
  });
</script>

<script>
  let activeProductActions = null;
  let activeProductId = null;
  let lastOpenPopupId = null;
  let isPopupClosing = false;

  document.body.style.overflow = 'unset';

  function openPopup(popupId) {
    const popup = document.getElementById(popupId);
    const productId = popupId.replace('popup-', '');

    if (popup) {
      if (productId !== 'bundle-summary') {
        const productActions = document.getElementById(`product-actions-${productId}`);
        const popupActionsPlaceholder = popup.querySelector('.popup-product-actions-placeholder');

        if (productActions && popupActionsPlaceholder) {
          activeProductActions = productActions;
          activeProductId = productId;
          popupActionsPlaceholder.appendChild(productActions);
        }
      }

      popup.classList.add('active');
      document.body.classList.add('popup-open');
      document.body.style.overflow = 'hidden';
      lastOpenPopupId = popupId;
      isPopupClosing = false;
    }
  }

  function closePopup(popupId) {
    const popup = document.getElementById(popupId);
    if (popup && !isPopupClosing) {
      const productId = popupId.replace('popup-', '');

      if (productId !== 'bundle-summary' && activeProductActions && activeProductId) {
        const productCard = document.querySelector(`.product-card:has(#popup-${activeProductId})`);
        if (productCard) {
          productCard.appendChild(activeProductActions);
        }
        activeProductActions = null;
        activeProductId = null;
      }

      popup.classList.remove('active');
      lastOpenPopupId = null;

      document.body.classList.remove('popup-open');
      document.body.style.overflow = 'unset';
      document.body.style.removeProperty('padding-right');
    }
  }

  function closeAllPopups() {
    if (!isPopupClosing) {
      document.querySelectorAll('.popup-overlay.active').forEach((popup) => {
        closePopup(popup.id);
      });

      document.body.classList.remove('popup-open');
      document.body.style.overflow = 'unset';
      document.body.style.removeProperty('padding-right');
    }
  }

  document.addEventListener('submit', function (event) {
    const popup = event.target.closest('.popup-overlay');
    if (popup) {
      const popupId = popup.id;
      lastOpenPopupId = popupId;

      setTimeout(() => {
        openPopup(popupId);
      }, 0);
    }
  });

  // Handle bundlebuilder:render
  document.addEventListener('bundlebuilder:render', function () {
    // If we have a stored popup ID, reopen it
    if (lastOpenPopupId) {
      openPopup(lastOpenPopupId);
    }
  });

  // Close popup when clicking outside content
  document.addEventListener('click', function (event) {
    if (event.target.classList.contains('popup-overlay') && !isPopupClosing) {
      closePopup(event.target.id);
    }
  });

  // Prevent popup from closing when clicking inside popup-content
  document.querySelectorAll('.popup-content').forEach((content) => {
    content.addEventListener('click', function (event) {
      event.stopPropagation();
    });
  });

  // Close popup on escape key
  document.addEventListener('keydown', function (event) {
    if (event.key === 'Escape' && !isPopupClosing) {
      const openPopup = document.querySelector('.popup-overlay.active');
      if (openPopup) {
        closePopup(openPopup.id);
      }
    }
  });
</script>
