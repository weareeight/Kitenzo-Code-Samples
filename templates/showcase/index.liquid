    if (toaster) {
      toaster.style.setProperty('display', 'none', 'important');
      toaster.remove(); // Completely remove the toaster from DOM
      sessionStorage.setItem('toasterClosed', 'true');
      localStorage.setItem('toasterClosed', 'true'); // Also store in localStorage for longer persistence
    }
  }

  // Function to check if toaster should be shown
  function shouldShowToaster() {
    return !sessionStorage.getItem('toasterClosed') && 
           !localStorage.getItem('toasterClosed') && 
           window.innerWidth <= 768;
  }

  // Show toaster initially only if it hasn't been closed before
  document.addEventListener('DOMContentLoaded', function() {
    const toaster = document.querySelector('.mobile-toaster');
    if (toaster && shouldShowToaster()) {
      setTimeout(() => {
        toaster.style.display = 'block';
      }, 500);
    } else if (toaster) {
      toaster.remove(); 
    }
  });

  // Prevent toaster from showing after any DOM updates
  const observer = new MutationObserver(function() {
    const toaster = document.querySelector('.mobile-toaster');
    if (toaster && (sessionStorage.getItem('toasterClosed') || localStorage.getItem('toasterClosed'))) {
      toaster.remove();
    }
  });

  observer.observe(document.body, { childList: true, subtree: true });
</script>


