  display: flex;
  width: 100%;
  background: white;
}

.bundle-main-content {
  flex: 1;
  max-width: calc(100% - 400px); 
}

.bundle-header {
  position: relative;
  width: 100%;
  height: 348px;
  margin-bottom: 16px;
  background: #f5f5f5;
}

.bundle-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
  background-color: rgb(236, 236, 236);
}

.bundle-header-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 96px 64px;
}

.bundle-header-text {
  max-width: 1280px;
  margin: 0 auto;
  width: 100%;
}

.bundle-steps-text {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 64px;
}

@media (max-width: 1024px) {
  .product-grid {
    padding: 0;
  }
}

/* Bundle Side Summary */
.bundle-side-summary {
  width: 425px;
  position: sticky;
  top: 0;
  height: 100vh;
  background: #fafafa;
  padding: 48px;
  overflow-y: auto;
  flex-shrink: 0;
}

@media (max-width: 1440px) {
