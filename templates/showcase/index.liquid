  max-height: 0;
  overflow: hidden;
  transition: all 0.25s linear;
  opacity: 0;
  transform: translateY(-10px);
}

.accordion-content.active {
  max-height: 500px;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.25s linear;
}

.accordion-icon .plus-icon,
.accordion-icon .minus-icon {
  transition: all 0.25s linear;
  position: absolute;
  transform-origin: center;
}

